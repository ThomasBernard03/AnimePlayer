<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:commons="clr-namespace:AnimePlayer.Commons"
             x:Class="AnimePlayer.Views.Controls.ButtonIconControl">
    <Frame x:Name="ParentStackFrame" Margin="0" Padding="10">
        <StackLayout Orientation="Horizontal" x:Name="ParentStackLayout" HorizontalOptions="Center" Spacing="10" VerticalOptions="Center">
            <Label
                x:Name="IconLabel"
                FontFamily="{Static commons:Constants.IconsFont}"/>
            <Label
                HorizontalOptions="Center"
                x:Name="TextLabel"/>
        </StackLayout>
    </Frame>
</ContentView>
